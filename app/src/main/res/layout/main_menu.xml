<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="124dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="126dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="7dp"
            android:text="OPTIONS"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <FrameLayout
            android:id="@+id/frame1"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:background="@drawable/challenges_wallpaper">

            <Button
                android:id="@+id/workoutButton"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/option"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="54dp"
                android:layout_marginTop="125dp"
                android:layout_marginEnd="57dp"
                android:background="@drawable/advancshape"
                android:backgroundTint="@color/design_default_color_secondary"
                android:gravity="center"
                android:text="WORKOUT"
                android:textSize="30dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame2"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_height="300dp"
            android:background="@drawable/jog_wallpaper"
            >

        <Button
            android:id="@+id/joggingButton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/frame1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="128dp"
            android:layout_marginEnd="57dp"
            android:background="@drawable/advancshape"
            android:backgroundTint="@color/design_default_color_secondary"
            android:gravity="center"
            android:text="JOGGING"
            android:textSize="30dp" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            app:menu="@menu/menu_bar"
            android:background="@drawable/barshape"
            app:itemTextColor="@drawable/bar2"
            app:itemIconTint="@drawable/bar2"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
</ScrollView>
